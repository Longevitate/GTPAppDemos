            {
              "name": "openai-apps-sdk",
              "image": "[format('{0}.azurecr.io/openai-apps-sdk:latest', parameters('containerRegistryName'))]"
            }
          ],
          "scale": {
            "minReplicas": 1,
            "maxReplicas": 3
          }
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.App/managedEnvironments', format('openai-apps-sdk-env-{0}', uniqueString(resourceGroup().id)))]",
        "[resourceId('Microsoft.ContainerRegistry/registries', parameters('containerRegistryName'))]"
      ]
    }
  ],
  "outputs": {
    "containerAppUrl": {
